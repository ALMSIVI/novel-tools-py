{
  "objects": {
    "readers": {
      "class": "TextReader",
      "encoding": "utf-8",
      "verbose": true
    },
    "matchers": [
      {
        "class": "NumberedMatcher",
        "type": "volume_title",
        "regex": "^Volume (.*)\\. (.*)$"
      },
      {
        "class": "SpecialMatcher",
        "type": "volume_title",
        "affixes": ["Easter Egg"],
        "regex": "^{affixes}\\. (.*)$"
      },
      {
        "class": "NumberedMatcher",
        "type": "chapter_title",
        "regex": "^Chapter (.*)\\. (.*)$"
      },
      {
        "class": "SpecialMatcher",
        "type": "chapter_title",
        "affixes": ["Introduction"],
        "regex": "^{affixes}\\. (.*)$"
      }
    ],
    "validators": [
      { "class": "VolumeValidator" },
      {
        "class": "ChapterValidator",
        "discard_chapters": false
      }
    ],
    "transformers": [
      { "class": "TypeTransformer" },
      {
        "class": "TitleTransformer",
        "units": [
          {
            "filter": {
              "tag": "special"
            },
            "format": "{affix} {content}"
          },
          {
            "filter": {
              "type": "volume_title"
            },
            "format": "Volume {index} {content}"
          },
          {
            "filter": {
              "type": "chapter_title"
            },
            "format": "Chapter {index} {content}"
          }
        ]
      }
    ],
    "writers": [
      {
        "class": "DirectoryWriter",
        "debug": true
      }
    ]
  }
}
