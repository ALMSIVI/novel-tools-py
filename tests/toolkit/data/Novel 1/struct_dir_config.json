{
  "objects": {
    "readers": {
      "class": "DirectoryReader",
      "read_contents": false,
      "discard_chapters": false
    },
    "matchers": [
      {
        "class": "NumberedMatcher",
        "type": "volume_title",
        "regex": "^Volume (\\d+) (.*)$"
      },
      {
        "class": "SpecialMatcher",
        "type": "volume_title",
        "affixes": ["Easter Egg"],
        "regex": "^{affixes} (.*)$"
      },
      {
        "class": "NumberedMatcher",
        "type": "chapter_title",
        "regex": "^Chapter (\\d+) (.*)$"
      },
      {
        "class": "SpecialMatcher",
        "type": "chapter_title",
        "affixes": ["Introduction"],
        "regex": "^{affixes} (.*)$"
      }
    ],
    "transformers": [
      {
        "class": "TitleTransformer",
        "units": [
          {
            "filter": {
              "tag": "special"
            },
            "format": "{affix}. {content}"
          },
          {
            "filter": {
              "type": "volume_title"
            },
            "format": "Volume {index}. {content}"
          },
          {
            "filter": {
              "type": "chapter_title"
            },
            "format": "Chapter {index}. {content}"
          }
        ]
      }
    ],
    "writers": [
      {
        "class": "CsvWriter"
      },
      {
        "class": "TocWriter",
        "debug": false
      }
    ]
  }
}
