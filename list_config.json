{
  "default_package": "default",
  "packages": [
    {
      "name": "default",
      "list": [
        {
          "base": "readers",
          "ending": "reader"
        },
        {
          "base": "writers",
          "ending": "writer"
        }
      ]
    }
  ],
  "objects": {
    "readers": {
      "class": "DirectoryReader",
      "read_contents": false
    },
    "writers": [
      {
        "class": "CsvWriter",
        "formats": {
          "volume_title": {
            "column": "volume",
            "format": "{content}"
          },
          "chapter_title": {
            "column": "chapter",
            "format": "{content}"
          }
        },
        "correct": false,
        "debug": false
      },
      {
        "class": "TocWriter",
        "formats": {
          "volume_title": "{content}",
          "chapter_title": "{content}"
        },
        "debug": false
      }
    ]
  }
}
